<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AllLevelsActivity">


    <Button
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Level 1"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:background="@drawable/all_levels_buttons"
        android:onClick="Level_1"
        />

    <Button
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Level 2"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:background="@drawable/locked_level"
        android:onClick="Level_2"
        />

    <Button
        android:id="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Level 3"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:background="@drawable/locked_level"
        android:onClick="Level_3"
        />

    <Button
        android:id="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Level 4"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:background="@drawable/locked_level"
        android:onClick="Level_4"
        />

    <Button
        android:id="@+id/l5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Level 5"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:background="@drawable/locked_level"
        android:onClick="Level_5"
        />

    <Button
        android:id="@+id/l6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Level 6"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:background="@drawable/locked_level"
        android:onClick="Level_6"
        />

</LinearLayout>